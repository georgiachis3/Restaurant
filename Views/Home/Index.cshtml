@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Georgia's Italian</h1>
    <p>The best authentic Italian food outside of Italy.</p>
</div>
<div class="row text-center">
    <div class="col-md-4">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-10 img-fluid" src="/images/starter.jpg" alt="A delicious vegetarian croquette starter." />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-10 img-fluid" src="/images/salad.jpg" alt="A freshley prepared chicken caesar salad" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-10 img-fluid" src="/images/soup.jpg" alt="A hearty stracciatella soup" />
                </div>
            </div>
        </div>
        <p>Starter</p>
    </div>
   <div class="col-md-4">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-10 img-fluid" src="/images/main.jpg" alt="A British take on a classic Italian pizza" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-10 img-fluid" src="/images/main2.jpg" alt="A crispy but tender chicken schnitzel along with a homemade sauce" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-10 img-fluid" src="/images/main3.jpg" alt="A vegetarian alfredo with freshly made pasta" />
                </div>
            </div>
        </div>
        <p>Main</p>
    </div>
    <div class="col-md-4">
         <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-10 img-fluid" src="/images/dessert.jpg" alt="A traditional cheescake recipe orginating from the streets of Florence." />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-10 img-fluid" src="/images/ice creammm.jpg" alt="Smooth and creamy caramel gelato" />
                </div>
                <div class="carousel-item">
                    <img class="d-block w-10 img-fluid" src="/images/chocolate.jpg" alt="A frangelico chocolate hazelnut tart" />
                </div>
            </div>
        </div>
        <p>Dessert</p>
    </div>
</div>
<div class="row text-center">
    <div class="col">
        <p>
            @Html.ActionLink("Book a table", "Booking", "Home", null, new { @class= "btn btn-primary"})
        </p>
    </div>
</div>


    